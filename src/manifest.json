{
  "name": "Mailvelope",
  "version": "0.4.2.0",
  "description": "Secure email with OpenPGP encryption for Webmail",
  "homepage_url":"http://www.mailvelope.com",
  "manifest_version": 2,
  "icons": { 
    "16": "img/encrypt-16.png",
    "48": "img/mail_locked_48.png",
    "128": "img/mail_locked_128.png" 
  },
  "browser_action": {
    "default_icon": "img/cryptography-icon24.png",
    "default_title": "Mailvelope",
    "default_popup": "views/popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "contextMenus",
    "webRequest",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "img/key-24.png",
    "img/mail_locked_96.png",
    "img/encrypt-32.png",
    "img/undo-32.png",
    "content_scripts/framestyles.css",
    "views/decryptDialog.html",
    "views/encryptDialog.html",
    "views/options/index.html"
  ],
  "sandbox": {
    "pages": [
      "views/options/index.html"
    ]
  }
} 
